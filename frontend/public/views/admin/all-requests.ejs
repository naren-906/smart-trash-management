<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14">
    <div class="container max-w-7xl mx-auto p-6">
      <h2 class="text-2xl font-bold mb-6">Manage Requests</h2>
      <div class="flex gap-6 mb-6">
        <div>
          <label for="statusFilter" class="mr-2 font-semibold">Status:</label>
          <select id="statusFilter" class="px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-200">
            <option value="all">All</option>
            <option value="pending" selected>Pending</option>
            <option value="rejected">Rejected</option>
            <option value="resolved">Resolved</option>
          </select>
        </div>
        <div>
          <label for="driverFilter" class="mr-2 font-semibold">Driver:</label>
          <select id="driverFilter" class="px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-200">
            <option value="all">All Drivers</option>
          </select>
        </div>
      </div>
      <div class="overflow-x-auto shadow-sm rounded-lg">
        <table class="w-full table-auto bg-white border-collapse">
          <thead class="bg-gray-50 border-b">
            <tr>
              <th class="px-4 py-3 text-left">User Details</th>
              <th class="px-4 py-3 text-left">Request Type</th>
              <th class="px-4 py-3 text-left">Time</th>
              <th class="px-4 py-3 text-left">Status</th>
              <th class="px-4 py-3 text-left">Assigned Driver</th>
              <th class="px-4 py-3 text-left">Actions</th>
            </tr>
          </thead>
          <tbody id="allRequestsBody">
            <!-- Content loaded via JS -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div id="processing" class="fixed inset-0 bg-black bg-opacity-25 hidden flex items-center justify-center z-[100]">
    <div class="bg-white p-4 rounded-lg shadow-lg">Processing...</div>
</div>

<script>
  let allRequests = [];
  let allDrivers = [];

  async function fetchData() {
    try {
      const [reqData, drvData] = await Promise.all([
        apiRequest('/admin/all-requests'),
        apiRequest('/admin/all-drivers')
      ]);
      
      if (reqData.success && drvData.success) {
        allRequests = reqData.requests;
        allDrivers = drvData.drivers;
        
        populateDriverFilter();
        renderRequests();
      }
    } catch (error) {
      console.error(error);
    }
  }

  function populateDriverFilter() {
    const filter = document.getElementById('driverFilter');
    allDrivers.forEach(d => {
      const opt = document.createElement('option');
      opt.value = d.name;
      opt.textContent = d.name;
      filter.appendChild(opt);
    });
  }

  function renderRequests() {
    const status = document.getElementById('statusFilter').value;
    const driver = document.getElementById('driverFilter').value;
    const tbody = document.getElementById('allRequestsBody');
    tbody.innerHTML = '';

    const filtered = allRequests.filter(r => {
      const matchStatus = status === 'all' || r.status === status;
      const matchDriver = driver === 'all' || r.assignedDriver === driver;
      return matchStatus && matchDriver;
    });

    if (filtered.length === 0) {
      tbody.innerHTML = '<tr><td colspan="6" class="px-4 py-3 text-center">No requests found.</td></tr>';
      return;
    }

    filtered.forEach(r => {
      const tr = document.createElement('tr');
      tr.className = 'border-b hover:bg-gray-50 text-sm';
      tr.innerHTML = `
        <td class="px-4 py-3">
          <div class="font-bold">${r.name}</div>
          <div class="text-xs text-gray-500">${r.email}</div>
          <div class="text-xs">${r.address}</div>
        </td>
        <td class="px-4 py-3">${r.request_type}</td>
        <td class="px-4 py-3 text-xs">${new Date(r.time_stamp).toLocaleString()}</td>
        <td class="px-4 py-3">
          <span class="px-2 py-1 rounded text-xs capitalize ${getStatusClass(r.status)}">${r.status}</span>
        </td>
        <td class="px-4 py-3 text-sm">${r.assignedDriver || 'None'}</td>
        <td class="px-4 py-3">
          <div class="flex flex-col gap-2">
            <select onchange="handleAssign(this, ${r.id})" class="text-xs border rounded p-1">
              <option value="">Assign Driver</option>
              ${allDrivers.map(d => `<option value="${d.id}">${d.name}</option>`).join('')}
            </select>
            <div class="flex gap-2">
              <button onclick="handleUnassign(${r.id})" class="text-[10px] bg-yellow-500 text-white px-2 py-1 rounded">Unassign</button>
              <button onclick="handleReject(${r.id})" class="text-[10px] bg-red-500 text-white px-2 py-1 rounded">Reject</button>
            </div>
          </div>
        </td>
      `;
      tbody.appendChild(tr);
    });
  }

  function getStatusClass(status) {
    if (status === 'pending') return 'bg-yellow-100 text-yellow-800';
    if (status === 'resolved') return 'bg-green-100 text-green-800';
    return 'bg-red-100 text-red-800';
  }

  async function handleAssign(select, requestId) {
    const driverId = select.value;
    if (!driverId) return;
    
    toggleProcessing(true);
    try {
      const res = await apiRequest(`/admin/assign-driver?driverId=${driverId}&requestId=${requestId}`);
      alert(res.message);
      location.reload();
    } catch (error) {
      alert(error.message);
    } finally {
      toggleProcessing(false);
    }
  }

  async function handleUnassign(requestId) {
    if (!confirm('Unassign driver?')) return;
    toggleProcessing(true);
    try {
      const res = await apiRequest(`/admin/unassign-driver?requestId=${requestId}`);
      alert(res.message);
      location.reload();
    } catch (error) {
      alert(error.message);
    } finally {
      toggleProcessing(false);
    }
  }

  async function handleReject(requestId) {
    if (!confirm('Reject this request?')) return;
    toggleProcessing(true);
    try {
      const res = await apiRequest(`/admin/reject-request?requestId=${requestId}`);
      alert(res.message);
      location.reload();
    } catch (error) {
      alert(error.message);
    } finally {
      toggleProcessing(false);
    }
  }

  function toggleProcessing(show) {
    document.getElementById('processing').classList.toggle('hidden', !show);
  }

  document.getElementById('statusFilter').onchange = renderRequests;
  document.getElementById('driverFilter').onchange = renderRequests;

  async function handleLogout(e) {
    e.preventDefault();
    try {
      await apiRequest('/admin/logout');
      window.location.href = '/admin-login';
    } catch (error) {
      alert(error.message);
    }
  }

  const logoutBtn = document.querySelector('a[href="/admin/logout"]');
  if (logoutBtn) logoutBtn.onclick = handleLogout;

  window.onload = fetchData;
</script>
</body>
</html>