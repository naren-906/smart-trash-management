<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14">
    <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Operational Drivers</h1>
    <div id="driversContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Content loaded via JS -->
    </div>
  </div>
</div>

<script>
  async function loadDrivers() {
    try {
      const data = await apiRequest('/admin/all-drivers');
      if (data.success) {
        renderDrivers(data.drivers);
      }
    } catch (error) {
      console.error(error);
    }
  }

  function renderDrivers(drivers) {
    const container = document.getElementById('driversContainer');
    container.innerHTML = '';
    
    if (drivers.length === 0) {
      container.innerHTML = '<div class="col-span-full text-center py-10 text-gray-500 text-lg">No drivers registered yet.</div>';
      return;
    }

    drivers.forEach(d => {
      const card = document.createElement('div');
      card.className = 'bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md transition-shadow';
      card.innerHTML = `
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 font-bold text-xl">
            ${d.name.charAt(0)}
          </div>
          <div>
            <h2 class="font-bold text-lg text-gray-800">${d.name}</h2>
            <span class="text-xs font-semibold px-2 py-1 bg-gray-100 rounded-full text-gray-600">${d.vehicleType}</span>
          </div>
        </div>
        <div class="space-y-2 text-sm text-gray-600 mb-6">
          <div class="flex justify-between"><span>Email</span> <span class="text-gray-900 font-medium">${d.email}</span></div>
          <div class="flex justify-between"><span>Phone</span> <span class="text-gray-900 font-medium">${d.phone}</span></div>
          <div class="flex justify-between"><span>License</span> <span class="text-gray-900 font-medium">${d.license}</span></div>
          <div class="flex justify-between"><span>Vehicle</span> <span class="text-gray-900 font-medium font-mono">${d.vehicle}</span></div>
        </div>
        <button onclick="handleDelete(${d.id})" class="w-full py-2 bg-red-50 text-red-600 hover:bg-red-600 hover:text-white rounded-xl font-bold transition-colors">
          Remove Driver
        </button>
      `;
      container.appendChild(card);
    });
  }

  async function handleDelete(id) {
    if (!confirm('Are you sure you want to remove this driver? This action cannot be undone.')) return;
    try {
      const res = await apiRequest(`/admin/delete-driver?driverId=${id}`);
      alert(res.message);
      location.reload();
    } catch (error) {
      alert(error.message);
    }
  }

  async function handleLogout(e) {
    e.preventDefault();
    try {
      await apiRequest('/admin/logout');
      window.location.href = '/admin-login';
    } catch (error) {
      alert(error.message);
    }
  }

  const logoutBtn = document.querySelector('a[href="/admin/logout"]');
  if (logoutBtn) logoutBtn.onclick = handleLogout;

  window.onload = loadDrivers;
</script>
</body>
