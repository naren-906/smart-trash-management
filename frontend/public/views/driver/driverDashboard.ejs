</aside>

<div class="p-4 sm:ml-64">
  <div class="max-w-4xl mx-auto mt-14">
    <div class="bg-white rounded-3xl p-8 mb-5 border border-gray-100 shadow-sm">
      <h1 class="text-3xl font-bold mb-8">Driver Dashboard</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <div class="space-y-6">
          <h2 class="text-xl font-bold text-gray-700">Quick Stats</h2>
          <div class="grid grid-cols-2 gap-4">
            <div class="col-span-2 p-6 bg-indigo-50 rounded-2xl">
              <div class="text-gray-600 font-semibold mb-2">Total Assigned Requests</div>
              <div id="total_requests" class="text-3xl font-extrabold text-indigo-600">--</div>
            </div>
            <div class="p-6 bg-yellow-50 rounded-2xl">
              <div class="text-gray-600 font-semibold mb-2 text-sm">Pending</div>
              <div id="total_pending" class="text-2xl font-extrabold text-yellow-600">--</div>
            </div>
            <div class="p-6 bg-green-50 rounded-2xl">
              <div class="text-gray-600 font-semibold mb-2 text-sm">Resolved</div>
              <div id="total_resolved" class="text-2xl font-extrabold text-green-600">--</div>
            </div>
            <div class="col-span-2 p-6 bg-red-50 rounded-2xl">
              <div class="text-gray-600 font-semibold mb-2 text-sm">Rejected</div>
              <div id="total_rejected" class="text-2xl font-extrabold text-red-600">--</div>
            </div>
          </div>
        </div>
        <div class="space-y-6">
          <h2 class="text-xl font-bold text-gray-700">By Category</h2>
          <div class="grid grid-cols-1 gap-4">
            <div class="flex justify-between items-center p-4 border rounded-xl">
              <span class="font-medium text-gray-600">Pickup</span>
              <span id="total_pickup_request" class="font-bold text-xl text-indigo-600">--</span>
            </div>
            <div class="flex justify-between items-center p-4 border rounded-xl">
              <span class="font-medium text-gray-600">Complaint</span>
              <span id="total_complaint_request" class="font-bold text-xl text-indigo-600">--</span>
            </div>
            <div class="flex justify-between items-center p-4 border rounded-xl">
              <span class="font-medium text-gray-600">Recycling</span>
              <span id="total_recycling_request" class="font-bold text-xl text-indigo-600">--</span>
            </div>
            <div class="flex justify-between items-center p-4 border rounded-xl">
              <span class="font-medium text-gray-600">Others</span>
              <span id="total_other_request" class="font-bold text-xl text-indigo-600">--</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  async function loadDashboard() {
    try {
      const data = await apiRequest('/driver/dashboard');
      if (data.success) {
        const stats = data.stats;
        for (const key in stats) {
          const el = document.getElementById(key);
          if (el) el.textContent = stats[key];
        }
      }
    } catch (error) {
      console.error(error);
    }
  }

  async function handleLogout(e) {
    e.preventDefault();
    try {
      await apiRequest('/driver/logout');
      window.location.href = '/driver-login';
    } catch (error) {
      alert(error.message);
    }
  }

  const logoutBtn = document.querySelector('a[href="/driver/logout"]');
  if (logoutBtn) logoutBtn.onclick = handleLogout;

  window.onload = loadDashboard;
</script>

</body>
</html>